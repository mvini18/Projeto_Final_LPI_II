<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>ProjetoAtestado</display-name>
	<servlet>
		<servlet-name>cadastraUsuario</servlet-name>
		<servlet-class>br.uniube.controller.CadastrarUsuarioServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>cadastraUsuario</servlet-name>
		<url-pattern>/novoUsuario</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>alterarUsuario</servlet-name>
		<servlet-class>br.uniube.controller.AlterarUsuarioServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>alterarUsuario</servlet-name>
		<url-pattern>/alterarUsuario</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>loginUsuario</servlet-name>
		<servlet-class>br.uniube.controller.LoginUsuarioServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginUsuario</servlet-name>
		<url-pattern>/loginUsuario</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>consultarCid</servlet-name>
		<servlet-class>br.uniube.controller.ConsultarCidServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>consultarCid</servlet-name>
		<url-pattern>/atestado</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>alterarSenha</servlet-name>
		<servlet-class>br.uniube.controller.AlterarSenhaServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>alterarSenha</servlet-name>
		<url-pattern>/alterarSenha</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deslogar</servlet-name>
		<servlet-class>br.uniube.controller.DeslogarUsuarioServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>deslogar</servlet-name>
		<url-pattern>/deslogar</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
	
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>